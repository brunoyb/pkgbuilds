# Maintainer: AkiraYB <brunoyb!outlook,com>

pkgname=mednafen-wip
_pkgname=mednafen
pkgver=0.9.26
pkgrel=1
pkgdesc='A command-line multi-system gaming emulator (WIP version)'
arch=('i686' 'x86_64')
url='http://mednafen.sourceforge.net/'
license=('GPL2')
depends=('jack' 'libcdio' 'sdl' 'zlib')
makedepends=('mesa')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
changelog="${_pkgname}.changelog"
source=("http://downloads.sourceforge.net/mednafen/${_pkgname}-${pkgver}-wip.tar.bz2")
#source=("${_pkgname}-${pkgver}-wip.tar.bz2::http://forum.fobby.net/index.php?t=getfile&id=422")
sha256sums=('78351f1206e0e01f7827380903813541f18e4dc5556b67c5f9dfd81ce6e88021')

build()
{
	cd "${srcdir}/${_pkgname}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package()
{
	cd "${srcdir}/${_pkgname}"

	make DESTDIR="$pkgdir" install
}
