# Maintainer: AkiraYB <brunoyb!yahoo,com,br>

pkgname=crosstool-ng
pkgver=1.14.1
pkgrel=1
pkgdesc='A versatile (cross-)toolchain generator'
arch=('i686' 'x86_64')
url='http://crosstool-ng.org/'
license=('GPL2')
depends=('automake' 'bison' 'curl' 'cvs' 'flex' 'gawk'
         'gcc' 'libtool' 'make' 'patch' 'python2' 'subversion')
changelog="${pkgname}.changelog"
source=("http://crosstool-ng.org/download/crosstool-ng/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('946f61fe8c8c51df497f0643a8cb9aec84e5cfec63b1131fc5699fede015006e')

build()
{
	cd "${srcdir}/${pkgname}-${pkgver}"

	./configure --prefix=/usr

	make
}

package()
{
	cd "${srcdir}/${pkgname}-${pkgver}"

	install -Dm 644 ct-ng.comp "${pkgdir}/etc/bash_completion.d/ct-ng"

	make DESTDIR="$pkgdir" install
}
