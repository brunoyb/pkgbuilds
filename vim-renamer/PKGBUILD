# Maintainer: AkiraYB <brunoyb!yahoo,com,br>

pkgname=vim-renamer
pkgver=1.2
_src_id=13165
pkgrel=6
pkgdesc='A Vim plugin that helps you to rename groups of files'
arch=('any')
url='http://www.vim.org/scripts/script.php?script_id=1721'
license=('unknown')
groups=('vim-plugins')
depends=('vim')
changelog="${pkgname}.changelog"
source=("renamer.vim::http://www.vim.org/scripts/download_script.php?src_id=${_src_id}")
sha256sums=('3eccd862966efaa00c149c506a94e52a774071470516d42fe1d069273af7e5d9')

package()
{
	local _installdir="${pkgdir}/usr/share/vim/vimfiles/plugin"

	install -d "${_installdir}"
	install -m 644 "${srcdir}/renamer.vim" -t "${_installdir}"
}
